# This is Git's per-user configuration file.
[user]
	name = Tanner Welsh
	email = tannerwelsh@gmail.com
[credential]
	helper = osxkeychain
[alias]
	a = add
	aa = add --all
	amend = commit --amend
	b = branch
	c = commit --verbose
	ca = commit --amend
	cf = commit --fixup
	co = checkout
	cs = commit --squash
	d = diff
	dc = diff --cached
	dh1 = diff HEAD~1
	ds = diff --stat=160,120
	fa = fetch --all
	ff = merge --ff-only
	l = log --oneline --graph
	noff = merge --no-ff
	pu = push
	pom = push origin master
	pullff = pull --ff-only
	ri = rebase --interactive --autosquash
	st = status
	up = pull

	# Fancy logging.
	#   h = head
	#   hp = head with patch
	#   r = recent commits, only current branch
	#   ra = recent commits, all reachable refs
	head = !git r -1
	h = !git head
	r = !GIT_NO_PAGER=1 git l -30
	ra = !git r --all
[branch]
	autosetuprebase = always
[core]
	excludesfile = ~/.gitignore
	editor = vim
[color]
	diff = auto
	status = auto
	branch = auto
	ui = true
[help]
	autocorrect = 1
[merge]
	tool = vimdiff
[pull]
	rebase = true
[pager]
	branch = false
