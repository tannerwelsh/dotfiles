# This is Git's per-user configuration file.
[user]
	name = Tanner Welsh
	email = tannerwelsh@gmail.com
[credential]
	helper = osxkeychain
	helper = cache --timeout 30000
[alias]
	a = add
	aa = add --all
	amend = commit --amend
	ap = add -p
	b = branch
	ba = branch -a
	c = commit --verbose
	ca = commit --amend
	cf = commit --fixup
	co = checkout
	cs = commit --squash
	ctags = !.git/hooks/ctags
	d = diff
	dc = diff --cached
	dh1 = diff HEAD~1
	ds = diff --stat=160,120
	fa = fetch --all
	ff = merge --ff-only
	g = grep -n --color --break --full-name
	l = log --oneline --graph
	ls = ls-files
	lsuntracked = ls-files -o --exclude-standard
	lsalias = ! git config --get-regexp ^alias\\. | sed -e s/^alias\\.// -e s/\\ /\\ =\\ /
	noff = merge --no-ff
	p = push
	pom = push origin master
	prune = remote prune origin
	pullff = pull --ff-only
	rc = rebase --continue
	ri = rebase --interactive --autosquash
	st = status
	up = pull
[branch]
	autosetuprebase = always
[fetch]
	prune = true
[core]
	excludesfile = ~/.gitignore
	editor = vim
	pager = delta
[color]
	diff = auto
	status = auto
	branch = auto
	ui = true
[help]
	autocorrect = 1
[merge]
	tool = vimdiff
[pull]
	rebase = true
[pager]
	branch = false
[init]
	defaultBranch = main
	templatedir = ~/.git_template
[delta]
	syntax-theme = Nord
[interactive]
	diffFilter = delta --color-only
