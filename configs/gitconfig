# This is Git's per-user configuration file.
[user]
	name = Tanner Welsh
	email = tannerwelsh@gmail.com
[credential]
	helper = osxkeychain
[alias]
	lsalias = ! git config --get-regexp ^alias\\. | sed -e s/^alias\\.// -e s/\\ /\\ =\\ /
	a = add
	aa = add --all
	ap = add -p
	amend = commit --amend
	b = branch
	c = commit --verbose
	ca = commit --amend
	cf = commit --fixup
	co = checkout
	cs = commit --squash
	d = diff
	dc = diff --cached
	dh1 = diff HEAD~1
	ds = diff --stat=160,120
	fa = fetch --all
	ff = merge --ff-only
	g = grep -n --color --break --full-name
	l = log --oneline --graph
	noff = merge --no-ff
	p = push
	pom = push origin master
	pullff = pull --ff-only
	ri = rebase --interactive --autosquash
	rc = rebase --continue
	st = status
	up = pull
[branch]
	autosetuprebase = always
[core]
	excludesfile = ~/.gitignore
	editor = vim
[color]
	diff = auto
	status = auto
	branch = auto
	ui = true
[help]
	autocorrect = 1
[merge]
	tool = vimdiff
[pull]
	rebase = true
[pager]
	branch = false
[init]
	defaultBranch = main
